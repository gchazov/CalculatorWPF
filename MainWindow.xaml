<Window
    x:Class="CalcYouLate.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="750"
    Height="450"
    mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" AllowDrop="True" MouseDown="Drag">
    <Grid Background="#b8b8b8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11.029" />
            <ColumnDefinition Width="88.971"/>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>



        <ListBox
            x:Name="sidebar"
            Grid.Column="0"
            Padding="0"
            Background="#5c5c5c"
            BorderBrush="DimGray"
            BorderThickness="0"
            Margin="0,0,0,0"
            SelectionChanged="sidebar_SelectionChanged" 
            SelectionMode="Single" Grid.ColumnSpan="2">
            <local:NavButton
                Width="80"
                Height="80"
                Margin="2,10"
                Image="Images\calculatorIcon.png"
                NavLink="/Pages/ExpressionsPage.xaml"
                Text="Expressions" />
            <local:NavButton
                Width="80"
                Height="80"
                Margin="2,10"
                Image="Images\calendarIcon.png"
                NavLink="/Pages/DateTimePage.xaml"
                Text="Date/Time" />
            <local:NavButton
                Width="80"
                Height="80"
                Margin="2,10"
                Image="Images\numberSysIcon.png"
                NavLink="/Pages/NumberSystemsPage.xaml"
                Text="Number Systems" />
            <local:NavButton
                Width="80"
                Height="80"
                Margin="2,10"
                Image="Images\measuresIcon.png"
                NavLink="/Pages/MeasurePage.xaml"
                Text="Measures" />
        </ListBox>

        <Frame BorderBrush="DimGray" BorderThickness="0" x:Name="navFrame" NavigationUIVisibility="Hidden" Grid.Column="2" Grid.ColumnSpan="2" AllowDrop="False" Margin="0,48,0,0" />
        <Image Source="/Images/powerButton.png" MouseLeftButtonDown="CloseApp" Cursor="Hand" Grid.Column="3" Margin="545,11,15,406"/>
        <Image Source="/Images/minimize.png" VerticalAlignment="Bottom" RenderTransformOrigin="0.431,0.501" Grid.Column="3" Margin="499,0,50,407" Height="31" MouseLeftButtonDown="Minimize" Cursor="Hand"/>

    </Grid>

</Window>
