<Page
    x:Class="CalcYouLate.Pages.ExpressionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExpressionsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#b8b8b8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBox
            x:Name="input"
            Grid.ColumnSpan="9"
            Style="{DynamicResource TextBoxStyle}"
            Text="input" />
        <TextBox
            x:Name="output"
            Grid.Row="1"
            Grid.ColumnSpan="9"
            Style="{DynamicResource TextBoxStyle}"
            Text="output" />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            Background="#d60001"
            BorderThickness="0"
            Content="C"
            FontSize="40"
            Foreground="#ffffff"
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="5"
            Grid.Column="1"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="4"
            Grid.Column="2"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="5"
            Grid.Column="2"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="4"
            Grid.Column="3"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="5"
            Grid.Column="3"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="2"
            Grid.Column="4"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="4"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="4"
            Grid.Column="4"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="5"
            Grid.Column="4"
            Content="..."
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="2"
            Grid.Column="6"
            Content="1"
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="6"
            Content="4"
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="4"
            Grid.Column="6"
            Content="7"
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="5"
            Grid.Column="6"
            Content="="
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="2"
            Grid.Column="7"
            Content="2"
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="7"
            Content="5"
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="4"
            Grid.Column="7"
            Content="8"
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="5"
            Grid.Column="7"
            Content="0"
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="2"
            Grid.Column="8"
            Content="3"
            Style="{DynamicResource ButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="8"
            Content="6"
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="4"
            Grid.Column="8"
            Content="9"
            Style="{DynamicResource ButtonStyle}" />

        <Button
            Grid.Row="5"
            Grid.Column="8"
            Content=","
            Style="{DynamicResource ButtonStyle}" />


    </Grid>
</Page>
