<Page xmlns:da="namespace:CalcYouLate.Pages"
    x:Class="CalcYouLate.Pages.DateTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DateTimePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">



	<Grid Background="#b8b8b8">




		<TextBlock 
			x:Name="result" 
			FontSize="30" 
			Margin="449,141,33,56"
				 
			Text="0 Лет&#xD;&#xA;0 Месяцев&#xD;&#xA;0 Дней"
				 
			Style="{DynamicResource TextBlockStyle}"
		/>

		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="С" Margin="24,92,0,0"
			Style="{DynamicResource TextBlockStyle}" Height="44" Width="39"
			
		/>

		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="До" Margin="246,87,0,0"
			Style="{DynamicResource TextBlockStyle}" Height="49" Width="68"
		/>


		<Calendar
			SelectedDatesChanged="FirstDate"
			
				x:Name="from"
				Margin="24,141,0,0"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				FontSize="40" Height="168" Width="179"
			
		/>

		<Calendar
			SelectedDatesChanged="SecondDate"
			SelectionMode="SingleDate"
			x:Name="to"
			Margin="246,141,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40" 
			RenderTransformOrigin="3.113,1.518" Height="168" Width="179"
			
			/>





		<TextBlock
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40"
			Margin="449,92,0,0" 
			Text="Разница между датами"
			Style="{DynamicResource TextBlockStyle}" Height="49" Width="161" 
			 
			/>



	</Grid>
</Page>
