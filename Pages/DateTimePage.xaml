<Page
    x:Class="CalcYouLate.Pages.DateTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DateTimePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">



	<Grid Background="#b8b8b8">
		<Grid.RowDefinitions>
			<RowDefinition Height="41*"/>
			<RowDefinition Height="4*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="593*"/>
			<ColumnDefinition Width="207*"/>
		</Grid.ColumnDefinitions>



		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="С" Margin="24,61,0,0"
			Style="{DynamicResource TextBlockStyle}"
			
		/>

		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="До" Margin="246,66,0,0"
			Style="{DynamicResource TextBlockStyle}"
		/>


		<Calendar
			SelectedDatesChanged="FirstDate"
				x:Name="from"
				Margin="24,141,0,0"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				FontSize="40"
			
		/>

		<Calendar
			SelectedDatesChanged="SecondDate"
			x:Name="to"
			Margin="246,141,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40" 
			RenderTransformOrigin="3.113,1.518"
			
			/>


		<TextBlock x:Name="result" FontSize="30" Margin="472,121,10,76"
				 Text="0 Дней&#xD;&#xA;0 Месяцев&#xD;&#xA;0 Лет" Grid.ColumnSpan="2"
				 Style="{DynamicResource TextBlockStyle}"
				 />





		<TextBlock
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40"
			Margin="472,66,0,0" 
			Text="Прошло" 
			Grid.ColumnSpan="2"
			Style="{DynamicResource TextBlockStyle}" 
			/>



	</Grid>
</Page>
