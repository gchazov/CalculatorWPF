<Page xmlns:da="namespace:CalcYouLate.Pages"
    x:Class="CalcYouLate.Pages.DateTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DateTimePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
	<Page.DataContext>
		<local:GetToday/>
	</Page.DataContext>



	<Grid Background="#b8b8b8">
		<Grid.RowDefinitions>
			<RowDefinition Height="41*"/>
			<RowDefinition Height="4*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="0*"/>
		</Grid.ColumnDefinitions>

		<TextBlock 
			x:Name="result" 
			FontSize="30" 
			Margin="472,121,10,76"
				 
			Text="0 Дней&#xD;&#xA;0 Месяцев&#xD;&#xA;0 Лет"
				 
			Style="{DynamicResource TextBlockStyle}"
		/>

		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="С" Margin="24,61,0,0"
			Style="{DynamicResource TextBlockStyle}" Height="48" Width="35"
			
		/>

		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="До" Margin="246,66,0,0"
			Style="{DynamicResource TextBlockStyle}" Height="48" Width="61"
		/>


		<Calendar
			
			SelectedDatesChanged="FirstDate"
			
				x:Name="from"
				Margin="24,141,0,0"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				FontSize="40" Height="168" Width="179"
			
		/>

		<Calendar
			
			SelectedDatesChanged="SecondDate"
			SelectionMode="SingleDate"
			x:Name="to"
			Margin="246,141,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40" 
			RenderTransformOrigin="3.113,1.518" Height="168" Width="179"
			
			/>


		





		<TextBlock
			
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40"
			Margin="472,66,0,0" 
			Text="Разница"
			Style="{DynamicResource TextBlockStyle}" Height="48" Width="162" 
			/>



	</Grid>
</Page>
