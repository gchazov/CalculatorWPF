<Page
    x:Class="CalcYouLate.Pages.DateTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DateTimePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

	<Page.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Montserrat" />
		</Style>
	</Page.Resources>


	<Grid Background="LightSlateGray" Margin="-7,4,7,-4">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="593*"/>
			<ColumnDefinition Width="207*"/>
		</Grid.ColumnDefinitions>



		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="С" Margin="24,88,0,0" RenderTransformOrigin="-0.157,0.56" 
			
		/>

		<TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Text="До" Margin="246,88,0,0" 
		/>

		<Calendar
			x:Name="from"
			Margin="24,0,0,0"
			HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="40"
			/>
		<Calendar
			x:Name="to"
			Margin="246,0,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			FontSize="40"
			/>


		<Border Background="WhiteSmoke" CornerRadius="10" Margin="471,144,120,146" Grid.ColumnSpan="2">
			<TextBlock x:Name="result" FontSize="30" Margin="10,0,-9,-35">
            <Run Language="ru-ru" Text="0 дней"/>
            <LineBreak/>
            <Run Language="ru-ru" Text="0 месяцев"/>
            <LineBreak/>
            <Run Language="ru-ru" Text="0 лет"/>
			</TextBlock>
		</Border>


		<TextBlock
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="40"
			Margin="471,91,0,0" 
			Text="Прошло" Grid.ColumnSpan="2"/>



	</Grid>
</Page>
