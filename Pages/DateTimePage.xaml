<Page
    x:Class="CalcYouLate.Pages.DateTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:CalcYouLate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DateTimePage"
    d:DesignHeight="418"
    d:DesignWidth="648"
    Tag="22"
    mc:Ignorable="d">




	<Grid Background="#b8b8b8">
		<Grid.RowDefinitions>
			<RowDefinition Height="43*"/>
			<RowDefinition Height="167*"/>
		</Grid.RowDefinitions>

		<TextBox
			x:Name="daysBox"
			Margin="226,115,343,188"
            FontSize="30"
			Text="0"
			TextAlignment="Right"
            Style="{DynamicResource TextBoxStyle}" 
			Grid.Row="1"
			TextChanged="DaysBox_TextChanged"
			/>

		<TextBox
			x:Name="weaksBox"
			Margin="226,156,343,149"
            FontSize="30"
			Text="0"
			TextAlignment="Right"
            Style="{DynamicResource TextBoxStyle}" 
			Grid.Row="1"
			TextChanged="WeaksBox_TextChanged"
			/>

		<TextBox
			x:Name="monthsBox"
			Margin="226,195,343,109"
            FontSize="30"
			Text="0"
			TextAlignment="Right"
            Style="{DynamicResource TextBoxStyle}" 
			Grid.Row="1"
			TextChanged="MonthsBox_TextChanged"
			/>
		
		<Calendar
            x:Name="from"
            Width="174"
            Height="168"
            Margin="27,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            SelectedDatesChanged="FirstDate" Grid.Row="1" />

		<Calendar
            x:Name="to"
            Width="188"
            Height="168"
            Margin="439,99,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            RenderTransformOrigin="3.113,1.518"
            SelectedDatesChanged="SecondDate"
            SelectionMode="SingleDate" Grid.Row="1" />


		<TextBlock
            x:Name="resultAppendix"
            Margin="307,120,209,109"
            FontSize="30"
            Style="{DynamicResource TextBlockStyle}"
            Grid.Row="1" ><Run Text="Дней"/><Run Text="&#xA;Недель"/><Run Text="&#xA;Месяцев"/></TextBlock>

		

		<TextBlock
            Width="39"
            Height="44"
            Margin="27,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Style="{DynamicResource TextBlockStyle}"
            Text="С" Grid.Row="1" />

		<TextBlock
            Width="94"
            Height="50"
            Margin="439,53,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Style="{DynamicResource TextBlockStyle}"
            Text="До" Grid.Row="1" />


		





		<TextBlock
            Width="170"
            Height="49"
            Margin="217,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="40"
            Style="{DynamicResource TextBlockStyle}"
            Text="Разница:" Grid.Row="1" />

		<Frame
            x:Name="navDateTimeFrame"
            AllowDrop="False"
            NavigationUIVisibility="Hidden" 
			Grid.RowSpan="2"
			/>

	</Grid>
</Page>