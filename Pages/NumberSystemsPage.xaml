<Page
    x:Class="CalcYouLate.Pages.NumberSystemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalcYouLate.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NumberSystemsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Tag="23"
    mc:Ignorable="d">

    <Grid Background="#b8b8b8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="6" Grid.ColumnSpan="6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Offset="0.4" Color="White" />
                    <GradientStop Offset="1.5" Color="Gray" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <TextBox
            x:Name="inputNum"
            Grid.ColumnSpan="9"
            Style="{DynamicResource TextBoxStyle}"
            Text="0"
            TextChanged="ParametersChanged" />
        <TextBox
            x:Name="outputNum"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="9"
            IsReadOnly="True"
            Style="{DynamicResource TextBoxStyle}"
            Text="0" />
        <TextBox
            x:Name="TextInNumsys"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Background="#b8b8b8"
            BorderThickness="0"
            FontSize="30"
            Style="{DynamicResource TextBoxStyle}"
            Text="Из СЧ"
            TextAlignment="Center" />
        <TextBox
            x:Name="TextOutNumsys"
            Grid.Row="2"
            Grid.Column="6"
            Grid.ColumnSpan="2"
            Background="#b8b8b8"
            BorderThickness="0"
            FontSize="30"
            Style="{DynamicResource TextBoxStyle}"
            Text="В СЧ"
            TextAlignment="Center" />
        <TextBox
            x:Name="inputNumsys"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Style="{DynamicResource TextBoxStyle}"
            Text="10"
            TextAlignment="Center"
            TextChanged="ParametersChanged" />
        <TextBox
            x:Name="outputNumsys"
            Grid.Row="3"
            Grid.Column="5"
            Grid.ColumnSpan="4"
            Style="{DynamicResource TextBoxStyle}"
            Text="10"
            TextAlignment="Center"
            TextChanged="ParametersChanged" />
    </Grid>
</Page>
